<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>ControlLeversAssy.ac</path>

  <animation>
    <object-name>PortThrottleLever</object-name>
    <object-name>PortThrottleKnob</object-name>
    <object-name>StarThrottleLever</object-name>
    <object-name>StarThrottleKnob</object-name>
    <object-name>PortMixLever</object-name>
    <object-name>PortMixKnob</object-name>
    <object-name>StarMixLever</object-name>
    <object-name>StarMixKnob</object-name>
    <object-name>PortPitchLever</object-name>
    <object-name>PortPitchKnob</object-name>
    <object-name>StarPitchLever</object-name>
    <object-name>StarPitchKnob</object-name>
    <object-name>FlapLever</object-name>
    <object-name>GearLever</object-name>
  </animation>

  <!-- gaz -->
  <animation>
    <type>rotate</type>
    <object-name>PortThrottleLever</object-name>
    <object-name>PortThrottleKnob</object-name>
    <property>controls/engines/engine[0]/throttle</property>
    <factor>-97</factor>
    <center>
      <x-m>2.583</x-m>
      <y-m>  0.00000 </y-m>
      <z-m>0.320</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>StarThrottleLever</object-name>
    <object-name>StarThrottleKnob</object-name>
    <property>controls/engines/engine[1]/throttle</property>
    <factor>-97</factor>
    <center>
      <x-m>2.583</x-m>
      <y-m>  0.00000 </y-m>
      <z-m>0.320</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- mixture -->
  <animation>
    <type>rotate</type>
    <object-name>PortMixLever</object-name>
    <object-name>PortMixKnob</object-name>
    <property>controls/engines/engine[0]/mixture</property>
    <factor>-97</factor>
    <center>
      <x-m>2.583</x-m>
      <y-m>  0.00000 </y-m>
      <z-m>0.320</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>StarMixLever</object-name>
    <object-name>StarMixKnob</object-name>
    <property>controls/engines/engine[0]/mixture</property>
    <factor>-97</factor>
    <center>
      <x-m>2.583</x-m>
      <y-m>  0.00000 </y-m>
      <z-m>0.320</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- pas d'helice -->
  <animation>
    <type>rotate</type>
    <object-name>PortPitchLever</object-name>
    <object-name>PortPitchKnob</object-name>
    <property>controls/engines/engine[0]/propeller-pitch</property>
    <factor>-97</factor>
    <center>
      <x-m>2.583</x-m>
      <y-m>  0.00000 </y-m>
      <z-m>0.320</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>StarPitchLever</object-name>
    <object-name>StarPitchKnob</object-name>
    <property>controls/engines/engine[1]/propeller-pitch</property>
    <factor>-97</factor>
    <center>
      <x-m>2.583</x-m>
      <y-m>  0.00000 </y-m>
      <z-m>0.320</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- flaps -->
  <animation>
    <type>rotate</type>
    <object-name>FlapLever</object-name>
    <object-name>FlapKnob</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor> 50</factor>
    <center>
      <x-m>2.583</x-m>
      <y-m>  0.00000 </y-m>
      <z-m>0.320</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- trains -->
  <animation>
    <type>rotate</type>
    <object-name>GearLever</object-name>
    <property>/controls/gear/gear-down</property>
    <factor>50</factor>
    <center>
      <x-m>2.583</x-m>
      <y-m>0.00000 </y-m>
      <z-m>0.320</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>GearLever</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>/controls/gear/gear-down</property>
      </binding>
      <condition>
        <property>/controls/gear/gear-down</property>
        <not>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </not>
      </condition>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-gear-toggle</tooltip-id>
        <label>Toggle Gears</label>
      </binding>
    </hovered>
  </animation>

  <!-- park -->
  <animation>
    <type>rotate</type>
    <object-name>ParkingBrakeLever</object-name>
    <property>/controls/gear/brake-parking</property>
    <factor>50</factor>
    <center>
      <x-m>2.6</x-m>
      <y-m>-0.153</y-m>
      <z-m>0.101</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>ParkingBrakeLever</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
controls.applyParkingBrake(-1);
          ]]>
        </script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-parkbrake-toggle</tooltip-id>
        <label>Toggle Parkbrake</label>
      </binding>
    </hovered>
  </animation>


</PropertyList>
