<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <keyboard>

    <key n="16">
      <name>ctrl-p</name>
      <desc>toggle autopilot</desc>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
b26.event_click_hold_autopilot();
          ]]>
        </script>
      </binding>
      <mod-shift>
        <binding>
          <command>nasal</command>
          <script>
            <![CDATA[
b26.event_click_disengage_autopilot();
            ]]>
          </script>
        </binding>
      </mod-shift>
    </key>

    <key n="76">
      <name>L</name>
      <desc>toggle lights</desc>
      <binding>
        <command>property-toggle</command>
        <property>/controls/light/taxi</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>/controls/light/nav</property>
      </binding>
    </key>

    <key n="108">
      <name>l</name>
      <desc>toggle landing lights</desc>
      <binding>
        <command>property-toggle</command>
        <property>/controls/light/landing</property>
      </binding>
    </key>

    <key n="100">
      <name>d</name>
      <desc>Windows</desc>
      <binding>
        <command>property-toggle</command>
        <property>/controls/doors/windows</property>
      </binding>
    </key>

    <key n="68">
      <name>D</name>
      <desc>Bay</desc>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
if (getprop("/controls/doors/bay") == 1) {
    setprop("/controls/doors/bay", 0);
    setprop("/controls/doors/scale", 0);
} else {
    setprop("/controls/doors/bay", 1);
}
          ]]>
        </script>
      </binding>
    </key>

    <key n="103">
      <name>g</name>
      <desc>gear up</desc>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
controls.gearDown(-1);
          ]]>
        </script>
        <condition>
          <not>
            <property>/gear/gear[0]/wow</property>
            <property>/gear/gear[1]/wow</property>
            <property>/gear/gear[2]/wow</property>
          </not>
        </condition>
      </binding>
    </key>

    <key n="106">
      <name>j</name>
      <desc>Retract Speedbrakes</desc>
      <binding>
        <command>property-cycle</command>
        <wrap type="bool">0</wrap>
        <property>/controls/flight/speedbrake</property>
        <value>1.0</value>
        <value>0.8</value>
        <value>0.5</value>
        <value>0.3</value>
        <value>0.1</value>
        <value>0.0</value>
      </binding>
    </key>
    <key n="107">
      <name>k</name>
      <desc>Extend Speedbrakes</desc>
      <binding>
        <command>property-cycle</command>
        <wrap type="bool">0</wrap>
        <property>/controls/flight/speedbrake</property>
        <value>0.0</value>
        <value>0.1</value>
        <value>0.3</value>
        <value>0.5</value>
        <value>0.8</value>
        <value>1.0</value>
      </binding>
    </key>


    <key n="115">
      <name>s</name>
      <desc>Start Engines</desc>
      <binding>
        <command>property-assign</command>
        <property>/controls/electric/battery-switch</property>
        <value type="int">1</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/controls/switches/master-avionics</property>
        <value type="int">1</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/controls/light/nav</property>
        <value type="int">1</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/controls/light/cabin-norm</property>
        <value type="int">1</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/controls/light/panel-norm</property>
        <value type="int">1</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/controls/light/instrument-norm</property>
        <value type="int">1</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/controls/light/taxi</property>
        <value type="int">1</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/controls/engines/engine[0]/magnetos</property>
        <value type="int">3</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/controls/engines/engine[0]/fuel-pump</property>
        <value type="bool">1</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/controls/engines/engine[1]/magnetos</property>
        <value type="int">3</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/controls/engines/engine[1]/fuel-pump</property>
        <value type="bool">1</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/sim/model/ground-equipment-f</property>
        <value type="bool">0</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/sim/model/ground-equipment-p</property>
        <value type="bool">0</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/sim/model/ground-equipment-g</property>
        <value type="bool">0</value>
      </binding>
      <binding>
        <command>nasal</command>
        <script>controls.startEngine()</script>
      </binding>
    </key>

    <key n="53">
      <name>keypad 5</name>
      <desc>center aileron, elevator, rudder</desc>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
b26.center_flight_controls();
          ]]>
        </script>
      </binding>
      <mod-ctrl>
        <desc>center all trim</desc>
        <binding>
          <command>nasal</command>
          <script>
            <![CDATA[
b26.center_flight_controls_trim();
            ]]>
          </script>
        </binding>
      </mod-ctrl>
    </key>

    <key n="359">
      <name>elevator up</name>
      <desc>decrease elevator or autopilot altitude</desc>
      <repeatable type="bool">true</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
b26.inc_elevator(-0.05, 1);
          ]]>
        </script>
      </binding>
      <mod-ctrl>
        <desc>trim up</desc>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/elevator-trim</property>
          <step type="double">-0.0005</step>
        </binding>
      </mod-ctrl>
      <mod-shift>
        <desc>look backwards</desc>
        <binding>
          <command>property-assign</command>
          <property>/sim/current-view/goal-heading-offset-deg</property>
          <property>/sim/view/config/back-direction-deg</property>
        </binding>
      </mod-shift>
    </key>

    <key n="357">
      <name>elevator down</name>
      <desc>increase elevator or autopilot altitude</desc>
      <repeatable type="bool">true</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
b26.inc_elevator(0.05, -1);
          ]]>
        </script>
      </binding>
      <mod-ctrl>
        <desc>trim down</desc>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/elevator-trim</property>
          <step type="double">0.0005</step>
        </binding>
      </mod-ctrl>
      <mod-shift>
        <desc>look forward</desc>
        <binding>
          <command>property-assign</command>
          <property>/sim/current-view/goal-heading-offset-deg</property>
          <property>/sim/view/config/front-direction-deg</property>
        </binding>
      </mod-shift>
    </key>

    <key n="356">
      <name>left arrow</name>
      <desc>move aileron left</desc>
      <repeatable type="bool">true</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
b26.inc_aileron(-0.05, -1);
          ]]>
        </script>
      </binding>
      <mod-ctrl>
        <desc>trim left</desc>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/aileron-trim</property>
          <step type="double">-0.001</step>
        </binding>
      </mod-ctrl>
      <mod-shift>
        <desc>look left</desc>
        <binding>
          <command>property-assign</command>
          <property>/sim/current-view/goal-heading-offset-deg</property>
          <property>/sim/view/config/left-direction-deg</property>
        </binding>
      </mod-shift>
    </key>

    <key n="358">
      <name>right arrow</name>
      <desc>move aileron right (or adjust AP heading.)</desc>
      <repeatable type="bool">true</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
b26.inc_aileron(0.05, 1);
          ]]>
        </script>
      </binding>
      <mod-ctrl>
        <desc>trim right</desc>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/aileron-trim</property>
          <step type="double">0.001</step>
        </binding>
      </mod-ctrl>
      <mod-shift>
        <desc>look right</desc>
        <binding>
          <command>property-assign</command>
          <property>/sim/current-view/goal-heading-offset-deg</property>
          <property>/sim/view/config/right-direction-deg</property>
        </binding>
      </mod-shift>
    </key>

    <key n="363">
      <name>Keypad 1</name>
      <desc>rudder left</desc>
      <repeatable type="bool">true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/controls/flight/rudder</property>
        <step type="double">-0.02</step>
      </binding>
      <mod-ctrl>
        <desc>trim rudder left</desc>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/rudder-trim</property>
          <step type="double">-0.001</step>
        </binding>
      </mod-ctrl>
    </key>

    <key n="361">
      <name>Keypad 3</name>
      <desc>rudder right</desc>
      <repeatable type="bool">true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/controls/flight/rudder</property>
        <step type="double">0.02</step>
      </binding>
      <mod-ctrl>
        <desc>trim rudder right</desc>
        <binding>
          <command>property-adjust</command>
          <property>/controls/flight/rudder-trim</property>
          <step type="double">0.001</step>
        </binding>
      </mod-ctrl>
    </key>

    <key n="43">
      <name>Keypad +</name>
      <desc>increase throttle or autopilot speed</desc>
      <repeatable type="bool">true</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
b26.inc_throttle(0.01, 1);
          ]]>
        </script>
      </binding>
    </key>

    <key n="364">
      <name>Keypad 0</name>
      <desc>decrease throttle or autopilot speed</desc>
      <repeatable type="bool">true</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
b26.inc_throttle(-0.01, -1);
          ]]>
        </script>
      </binding>
    </key>



  </keyboard>
  <mice>
  <mouse n="0">

  <!--
________________________________________________________________________________
                                                                         BUTTONS
  -->
    <mode n="1"> <!-- crosshair -->

      <button n="3"> <!-- scroll up adjust throttle if AP disabled, adjust speed if AP enabled -->
        <binding>
          <command>nasal</command>
          <script>
            <![CDATA[
b26.inc_throttle(0.01, 1);
            ]]>
          </script>
          <offset>0</offset>
          <property />
          <step />
        </binding>
      </button>

      <button n="4"> <!-- scroll down adjust throttle if AP disabled, adjust speed if AP enabled -->
        <binding>
          <command>nasal</command>
          <script>
            <![CDATA[
b26.inc_throttle(-0.01, -1);
            ]]>
          </script>
          <offset>0</offset>
          <property />
          <step />
        </binding>
      </button>

    </mode>

  </mouse>
  </mice>

</PropertyList>
