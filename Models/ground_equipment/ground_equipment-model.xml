<?xml version="1.0" encoding="utf-8"?>
<PropertyList>

  <path>ground_equipment.ac</path>
  <nopreview />

  <animation>
    <type>material</type>
    <object-name>ground_equipment.gears</object-name>
    <object-name>external-power-unit</object-name>
    <object-name>fuel-truck.base</object-name>
    <object-name>fuel-truck.tank</object-name>
    <object-name>extincteur</object-name>
    <object-name>cones-avant</object-name>
    <object-name>cones-arriere-gauche</object-name>
    <object-name>cones-arriere-droit</object-name>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ gears chocks -->
  <animation>
    <type>select</type>
    <object-name>ground_equipment.gears</object-name>
    <condition>
      <property>sim/model/ground-equipment-g</property>
      <less-than>
        <property>velocities/groundspeed-kt</property>
        <value>2</value>
      </less-than>
    </condition>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>ground_equipment.gears</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/ground-equipment-g</property>
      </binding>
    </action>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ external-power-unit -->
  <animation>
    <type>select</type>
    <object-name>external-power-unit</object-name>
    <object-name>extincteur</object-name>
    <object-name>cones-avant</object-name>
    <object-name>cones-arriere-droit</object-name>
    <condition>
      <property>sim/model/ground-equipment-p</property>
      <less-than>
        <property>velocities/groundspeed-kt</property>
        <value>2</value>
      </less-than>
    </condition>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>external-power-unit</object-name>
    <object-name>extincteur</object-name>
    <object-name>cones-avant</object-name>
    <object-name>cones-arriere-droit</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/ground-equipment-p</property>
      </binding>
    </action>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~ fuel-truck -->
  <animation>
    <type>select</type>
    <object-name>fuel-truck.base</object-name>
    <object-name>fuel-truck.tank</object-name>
    <object-name>cones-arriere-gauche</object-name>
    <condition>
      <property>sim/model/ground-equipment-f</property>
      <less-than>
        <property>velocities/groundspeed-kt</property>
        <value>2</value>
      </less-than>
    </condition>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>fuel-truck.base</object-name>
    <object-name>cones-arriere-gauche</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/ground-equipment-f</property>
      </binding>
    </action>
  </animation>

  <!-- ~~~~~~~~~~~~~~~~~~~~~~ control fuel quantity -->
  <animation>
    <type>pick</type>
    <object-name>fuel-truck.tank</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>
          <![CDATA[
var level_norm = getprop("/sim/fuel-fraction") or 0;
setprop("/consumables/fuel/tank[0]/selected", 1);
setprop("/consumables/fuel/tank[1]/selected", 1);
setprop("/consumables/fuel/tank[2]/selected", 1);
setprop("/consumables/fuel/tank[3]/selected", 1);
setprop("/consumables/fuel/tank[0]/level-norm", level_norm);
setprop("/consumables/fuel/tank[1]/level-norm", level_norm);
setprop("/consumables/fuel/tank[2]/level-norm", level_norm);
setprop("/consumables/fuel/tank[3]/level-norm", level_norm);
          ]]>
        </script>
      </binding>
    </action>
  </animation>


</PropertyList>

