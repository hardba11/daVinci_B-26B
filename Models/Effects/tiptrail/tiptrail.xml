<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>vortex</name>
    <type>vortex</type>
    <texture>smoke.png</texture>
    <emissive>false</emissive>
    <lighting>true</lighting>
    <pass>true</pass>
    <align>billboard</align>
    <placer>
      <type>point</type> <!-- sector / segments / point -->
    </placer>
    <condition>
      <and>
        <greater-than>
          <property>/environment/relative-humidity</property>
          <value>98</value>
        </greater-than>
        <greater-than>
          <property>/environment/temperature-degc</property>
          <value>0</value>
        </greater-than>
        <greater-than>
          <property>velocities/airspeed-kt</property>
          <value>100</value>
        </greater-than>
        <or>
          <or>
            <less-than>
              <property>controls/flight/aileron</property>
              <value>-0.01</value>
            </less-than>
            <greater-than>
              <property>controls/flight/aileron</property>
              <value>0.01</value>
            </greater-than>
          </or>
          <or>
            <less-than>
              <property>surface-positions/elevator-pos-norm</property>
              <value>-0.01</value>
            </less-than>
            <greater-than>
              <property>surface-positions/elevator-pos-norm</property>
              <value>0.01</value>
            </greater-than>
          </or>
        </or>
      </and>
    </condition>

    <attach>world</attach>
    

    <shooter>
      <theta-min-deg>-5</theta-min-deg>
      <theta-max-deg>65</theta-max-deg>
      <phi-min-deg>-5</phi-min-deg>
      <phi-max-deg>65</phi-max-deg>
      <speed-mps>
        <value>0</value>
        <spread>15</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>45</x-min-deg-sec>
        <y-min-deg-sec>45</y-min-deg-sec>
        <z-min-deg-sec>10</z-min-deg-sec>
        <x-max-deg-sec>120</x-max-deg-sec>
        <y-max-deg-sec>120</y-max-deg-sec>
        <z-max-deg-sec>30</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>900</value>
        <spread>1</spread>
      </particles-per-sec>
    </counter>

    <align>fixed</align>

    <particle>
      <start>
        <color>
          <red><value>   1.0 </value></red>
          <green><value> 1.0 </value></green>
          <blue><value>  1.0 </value></blue>
          <alpha><value> 0.1 </value></alpha>
        </color>
        <size>
          <value>0.10</value>
        </size>
      </start>

      <end>
       <color>
         <red><value>   1.00 </value></red>
         <green><value> 1.00 </value></green>
         <blue><value>  1.00 </value></blue>
         <alpha><value> 0.08 </value></alpha>
       </color>
       <size>
         <value>1.0</value>
       </size>
      </end>

      <life-sec>
        <value>0.45</value>
      </life-sec>

      
    </particle>

      <program>
      <fluid>air</fluid>         <!-- air / water -->
      <gravity>false</gravity>
      <wind>true</wind>
    </program>

  </particlesystem>

</PropertyList>
