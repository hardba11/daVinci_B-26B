<?xml version="1.0"?>
<PropertyList>

  <path>alt-us.ac</path>

  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>PressureDial</object-name>
    <emission>
      <factor-prop>/sim/model/rendering/relative-instrument-luminosity</factor-prop>
      <red>   0.017</red>
      <green> 0.60 </green>
      <blue>  0.65 </blue>
    </emission>
  </animation>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>3</max-m>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor>0.36</factor>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>needle2</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor>0.036</factor>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>needle3</object-name>
    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    <factor>0.0036</factor>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PressureDial</object-name>
    <property>instrumentation/altimeter/setting-inhg</property>
    <interpolation>
      <entry><ind>20</ind><dep>211</dep></entry>
      <entry><ind>27.90</ind><dep>210</dep></entry>
      <entry><ind>30.00</ind><dep>0</dep></entry>
      <entry><ind>31.50</ind><dep>-150</dep></entry>
      <entry><ind>40</ind><dep>-151</dep></entry>
    </interpolation>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>Face</object-name>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-alt-us</tooltip-id>
        <label>altitude : %d ft</label>
        <property>/instrumentation/altimeter/indicated-altitude-ft</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>knob</object-name>
    <visible>true</visible>
    <action>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/altimeter/setting-inhg</property>
        <step>0.009</step>
        <min>0</min>
        <max>60</max>
        <wrap>0</wrap>
      </binding>
    </action>
    <action>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/altimeter/setting-inhg</property>
        <step>-0.009</step>
        <min>0</min>
        <max>60</max>
        <wrap>0</wrap>
      </binding>
    </action>

    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-alt-us-inhg</tooltip-id>
        <label>pressure : %0.2f inhg</label>
        <property>instrumentation/altimeter/setting-inhg</property>
      </binding>
    </hovered>
  </animation>

</PropertyList>




