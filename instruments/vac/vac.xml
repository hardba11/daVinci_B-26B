<?xml version="1.0"?>
<PropertyList>
  <path>vac.ac</path>

  <effect>
    <inherits-from>Aircraft/daVinci_B-26B/Models/effects/interior-flashlight</inherits-from>
    <object-name>Face</object-name>
    <object-name>Needle1</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>Needle1</object-name>
    <emission>
      <factor-prop>/sim/model/rendering/relative-instrument-luminosity</factor-prop>
      <red>   0.017</red>
      <green> 0.60 </green>
      <blue>  0.65 </blue>
    </emission>
    <condition>
      <property>/sim/model/rendering/relative-instrument-luminosity</property>
    </condition>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>Needle1</object-name>
    <emission>
      <factor-prop>/sim/model/rendering/relative-cabin-luminosity</factor-prop>
      <red>.04</red>
      <green>.14</green>
      <blue>.14</blue>
    </emission>
    <condition>
      <not><property>/sim/model/rendering/relative-instrument-luminosity</property></not>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Needle1</object-name>
    <property>/systems/vacuum/suction-inhg</property>
    <min>0</min>
    <max>10</max>
    <interpolation>
      <entry><ind>0</ind><dep>0</dep></entry>
      <entry><ind>10</ind><dep>300</dep></entry>
    </interpolation>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
</PropertyList>



