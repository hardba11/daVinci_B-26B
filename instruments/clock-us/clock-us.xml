<?xml version="1.0"?>
<PropertyList>
  <path>clock-us.ac</path>

  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>MinuteHand</object-name>
    <object-name>HourHand</object-name>
    <object-name>SecondHand</object-name>
    <emission>
      <factor-prop>/sim/model/rendering/relative-instrument-luminosity</factor-prop>
      <red>   0.017</red>
      <green> 0.60 </green>
      <blue>  0.65 </blue>
    </emission>
    <condition>
      <property>/sim/model/rendering/relative-instrument-luminosity</property>
    </condition>
  </animation>
  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>MinuteHand</object-name>
    <object-name>HourHand</object-name>
    <object-name>SecondHand</object-name>
    <emission>
      <factor-prop>/sim/model/rendering/relative-cabin-luminosity</factor-prop>
      <red>.04</red>
      <green>.14</green>
      <blue>.14</blue>
    </emission>
    <condition>
      <not><property>/sim/model/rendering/relative-instrument-luminosity</property></not>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>HourHand</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor>0.00833333333333333</factor>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>MinuteHand</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor>0.1</factor>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>SecondHand</object-name>
    <property>/instrumentation/clock/indicated-sec</property>
    <factor>6</factor>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>Face</object-name>
    <visible>true</visible>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-clock</tooltip-id>
        <label>clock : %s</label>
        <property>/instrumentation/clock/indicated-string</property>
      </binding>
    </hovered>
  </animation>


</PropertyList>


