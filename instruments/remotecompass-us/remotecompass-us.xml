<?xml version="1.0"?>
<PropertyList>
  <path>remotecompass-us.ac</path>
  <animation>
    <type>material</type>
    <object-name>Face</object-name>
    <object-name>Needle1</object-name>
    <object-name>Needle2</object-name>
    <emission>
      <factor-prop>/controls/light/instrument-norm</factor-prop>
      <red>   0.017</red>
      <green> 0.60 </green>
      <blue>  0.65 </blue>
    </emission>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>Needle1</object-name>
    <property>/instrumentation/magnetic-compass/indicated-heading-deg</property>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>Needle2</object-name>
    <property>/instrumentation/magnetic-compass/bookmark-heading-deg</property>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>Face</object-name>
    <visible>true</visible>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>tooltip-clock</tooltip-id>
        <label>mag heading : %d</label>
        <property>/orientation/heading-magnetic-deg</property>
      </binding>
    </hovered>
  </animation>


</PropertyList>


