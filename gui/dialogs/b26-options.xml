<?xml version="1.0" encoding="utf-8"?>
<!--
# b26 options dialogbox
-->

<PropertyList>

  <name>b26-options</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <group>
    <layout>hbox</layout><empty><stretch>1</stretch></empty>
    <text><label>B-26's options</label></text>
    <empty><stretch>1</stretch></empty>
    <button><pref-width>16</pref-width><pref-height>16</pref-height><legend />
      <default>1</default><keynum>27</keynum><border>2</border>
      <binding><command>dialog-close</command></binding>
      <binding><command>dialog-apply</command></binding>
    </button>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ Cockpit -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>0</col>
      <label>Cockpit</label>
    </text>
    <checkbox>
      <row>1</row><col>0</col>
      <x>150</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/glass-cockpit</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/glass-cockpit</property>
      </binding>
    </checkbox>
    <text>
      <row>1</row><col>1</col>
      <label>Glass cockpit</label>
    </text>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ fret -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>0</col>
      <label>Fret</label>
    </text>
    <checkbox>
      <row>1</row><col>0</col>
      <x>150</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/equipment-baggages</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/equipment-baggages</property>
      </binding>
    </checkbox>
    <text>
      <row>1</row><col>1</col>
      <halign>left</halign>
      <label>Boxes</label>
    </text>
    <checkbox>
      <row>2</row><col>0</col>
      <x>150</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/equipment-canoe</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/equipment-canoe</property>
      </binding>
    </checkbox>
    <text>
      <row>2</row><col>1</col>
      <halign>left</halign>
      <label>Canoe</label>
    </text>
    <checkbox>
      <row>3</row><col>0</col>
      <x>150</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/equipment-velos</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/equipment-velos</property>
      </binding>
    </checkbox>
    <text>
      <row>3</row><col>1</col>
      <halign>left</halign>
      <label>Bicycles</label>
    </text>
  </group>

  <hrule />

  <!-- ~~~~~~~~~~~~~~~~~~ canvas hud helper -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>0</col>
      <label>HUD helper</label>
    </text>
    <checkbox>
      <row>1</row><col>0</col>
      <x>150</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/instrumentation/my_aircraft/target_positions/controls/enabled</property>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/my_aircraft/target_positions/controls/enabled</property>
      </binding>
    </checkbox>
    <text>
      <row>1</row><col>1</col>
      <halign>left</halign>
      <label>Show targets' positions</label>
    </text>
    <checkbox>
      <row>2</row><col>0</col>
      <x>150</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/instrumentation/my_aircraft/target_positions/controls/targets_are_mp</property>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/my_aircraft/target_positions/controls/targets_are_mp</property>
      </binding>
    </checkbox>
    <text>
      <row>2</row><col>1</col>
      <halign>left</halign>
      <label>Show multiplayers targets (AI if unchecked)</label>
    </text>
  </group>

  <hrule />

</PropertyList>




