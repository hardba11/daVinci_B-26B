<?xml version="1.0" encoding="utf-8"?>
<!--
# b26 equipment dialogbox
-->

<PropertyList>

  <name>b26-equipments</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <group>
    <layout>hbox</layout><empty><stretch>1</stretch></empty>
    <text><label>B-26's equipment</label></text>
    <empty><stretch>1</stretch></empty>
    <button><pref-width>16</pref-width><pref-height>16</pref-height><legend />
      <default>1</default><keynum>27</keynum><border>2</border>
      <binding><command>dialog-close</command></binding>
      <binding><command>dialog-apply</command></binding>
    </button>
  </group>

  <!-- ~~~~~~~~~~~~~~~~~~ ground equipment -->
  <hrule />
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <text>
      <row>0</row><col>1</col>
      <label>Ground equipment</label>
    </text>

    <checkbox>
      <row>1</row><col>0</col>
      <x>50</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/ground-equipment-f</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/ground-equipment-f</property>
      </binding>
    </checkbox>
    <text>
      <row>1</row><col>1</col>
      <halign>left</halign>
      <label>Fuel truck</label>
    </text>

    <checkbox>
      <row>2</row><col>0</col>
      <x>50</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/ground-equipment-p</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/ground-equipment-p</property>
      </binding>
    </checkbox>
    <text>
      <row>2</row><col>1</col>
      <halign>left</halign>
      <label>EPU</label>
    </text>

    <checkbox>
      <row>3</row><col>0</col>
      <x>50</x>
      <y>200</y>
      <width>12</width>
      <height>12</height>
      <property>/sim/model/ground-equipment-g</property>
      <binding>
        <command>property-toggle</command>
        <property>/sim/model/ground-equipment-g</property>
      </binding>
    </checkbox>
    <text>
      <row>3</row><col>1</col>
      <halign>left</halign>
      <label>Wheel chocks</label>
    </text>
  </group>



</PropertyList>





